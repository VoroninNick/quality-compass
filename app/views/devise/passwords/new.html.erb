<div id="devise-system">
  <div class="devise-container">
    <h2><%= t('system.forget_password') %></h2>
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
      <%= devise_error_messages! %>
      <div class="system-form-field">
        <%= f.email_field :email, :autofocus => true, :placeholder => t('system.name_placeholder') %>
        <%= f.label :email, t('system.name') %>
      </div>
      <div class="system-form-buttons">
        <%= f.submit 'Submit' %>
      </div>
    <% end %>
  </div>
</div>

