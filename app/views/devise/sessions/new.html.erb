<div id="devise-system">
  <div class="devise-container">
    <h2><%= t('system.login_heading') %></h2>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div class="system-form-field">
        <%= f.email_field :email, :autofocus => true, :placeholder => t('system.name_placeholder') %>
        <%= f.label :email, t('system.name') %>
      </div>

      <div class="system-form-field">
        <%= f.password_field :password, :placeholder => t('system.password_placeholder') %>
        <%= f.label :password, t('system.password') %>
      </div>

      <div class="system-form-field remember-field">
        <%= f.check_box :remember_me %> <%= f.label :remember_me, t('system.remember_me'), :class => 'remember-me' %>
      </div>

      <div class="system-form-buttons">
        <%= f.submit t('system.sign_in') %>
        <%= link_to t('system.forget_password'), new_password_path(resource_name) %>
      </div>
    <% end %>
  </div>
</div>
