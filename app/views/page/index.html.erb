<div id="index-page-erb">
  <div class="proverb-holder">
    <div class="g4 proverb-item alpha">
      <h2><%= image_tag('heading-arrow.png') %> <%= get_text(1).name %></h2>
      <p><%= get_text(1).body %></p>
    </div>
    <div class="g4 proverb-item">
      <h2><%= image_tag('heading-arrow.png') %> <%= get_text(2).name %></h2>
      <p><%= get_text(2).body %></p>
    </div>
    <div class="g4 proverb-item omega">
      <h2><%= image_tag('heading-arrow.png') %> <%= get_text(3).name %></h2>
      <p><%= get_text(3).body %></p>
    </div>
  </div>

  <div class="ceo-introduction-holder">
    <div class="g5 ceo-avatar alpha">
      <%= image_tag('ceo-avatar.jpg') %>
      <h2>Rian Bast</h2>
      <p>Co-owner</p>
    </div>
    <div class="g7 ceo-intro omega">
      <h2><%= get_text(4).name %></h2>
      <p><%= get_text(4).body %></p>
    </div>
    <br class="clear">
    <p class="ceo-sign"><%= image_tag 'ceo-sign.png', :style => 'text-align: right;' %></p>
  </div>

  <div class="news-and-order-form">
    <div class="g6 news-block alpha">
      <h2>News from area</h2>
      <%= render :partial => 'partials/news_home' %>
    </div>
    <div class="g6 form-block omega">
      <%= form_for @order, :url => orders_path(@order), :html => {:method => :post} do |f| %>
        <div class="form-field">
          <h2>Request form</h2>
        </div>
        <div class="form-field">
          <%= f.text_field :name %>
          <%= f.label t 'order_form.name' %>
        </div>
        <div class="form-field">
          <%= f.text_field :company %>
          <%= f.label t 'order_form.company' %>
        </div>
        <div class="form-field">
          <%= f.text_field :email %>
          <%= f.label t 'order_form.email' %>
        </div>
        <div class="form-field">
          <%= f.text_field :phone %>
          <%= f.label t 'order_form.phone' %>
        </div>
        <div class="form-area">
          <%= f.text_area :body %>
          <%= f.label t 'order_form.body' %>
        </div>
        <div class="submit-field">
          <%= f.submit t 'order_form.submit' %>
        </div>

      <% end %>
    </div>
  </div>
</div>
